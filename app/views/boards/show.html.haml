.container
  %h2.card_board_pageTitle= @board.name
  - @tasks.each do |task|
    = link_to board_task_path(@board,task) do
      .card_content
        -if task.eyecatch.attached?
          .card_image
            = image_tag task.eyecatch
        .card_task
          .card_task_name
            = task.name
          .card_task_term
            term #{task.term}
        .card_description
          = task.description
        .card_detail
          .card_avatar
          = image_tag @board.user.avatar_image, class: 'avatar'
          .card_detail_comment 
            %span 22
            -# コメント数を取得して表示する
            =image_tag 'comment-count.svg'
        .card_auther_name
          - if @board.user.present?
            %p= @board.user.display_name

  = link_to new_board_task_path(@board) do
    .card_add_new
      + Add new card